<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Variables.Typography" parent="Variables.Dimensions">
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--
        NOTE: Typography deals per character basis AND not the entire line of text.
        Text Color & Line Height does not apply in here. Add them to `styles.xml`
    -->
    <style name="TextAppearance.LargeTitle" parent="">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_xxx_large</item>
    </style>

    <style name="TextAppearance.LargeTitle.Medium">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.Title1" parent="">
